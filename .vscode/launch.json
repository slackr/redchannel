{
    "version": "0.2.0",
    "configurations": [
        {
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "RC_PASSWORD": "redchannel"
            },
            "args": ["--debug"],
            "type": "node",
            "request": "launch",
            "name": "Debug RedChannel",
            "program": "${workspaceFolder}/src/app.ts",
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "console": "integratedTerminal",
            "smartStep": true,
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
